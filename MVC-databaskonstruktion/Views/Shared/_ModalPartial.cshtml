@using MVC_databaskonstruktion.Utils
@model Modal

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#@Model.Title">
    Open @Model.Title
</button>

<div class="modal fade" tabindex="-1" role="dialog" id="@Model.Title">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Model.Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    @foreach (var input in Model.Inputs)
                    {
                        switch (input.Type)
                        {
                            case "datetime":
                                <div class="form-group">
                                    <label for="@input.Id">@input.Label</label>
                                    <input type="date" class="form-control" id="@input.Id" placeholder="@input.Placeholder">
                                </div>
                                break;
                            case "dropdown":
                                <div class="form-group">
                                    <label for="@input.Id">@input.Label</label>
                                    <select class="form-control" id="@input.Id">
                                        @foreach (var item in input.DropdownItems)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                </div>
                                break;
                            case "hidden":
                                <input type="hidden" id="@input.Id" value="@input.Placeholder">
                                break;
                            case "normal":
                                <div class="form-group">
                                    <label for="@input.Id">@input.Label</label>
                                    <input type="text" class="form-control" id="@input.Id" placeholder="@input.Placeholder">
                                </div>
                                break;
                            case "multiline":
                                <div class="form-group">
                                    <label for="@input.Id">@input.Label</label>
                                    <textarea class="form-control" id="@input.Id" placeholder="@input.Placeholder"></textarea>
                                </div>
                                break;
                        }
                    }
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>